         <ComboBox fx:id="CategoryPost" layoutX="272.0" layoutY="198.0" onAction="#handleCategorySelection" prefWidth="150.0" stylesheets="@design.css" />






            
        </children>
    </AnchorPane>
</AnchorPane>
