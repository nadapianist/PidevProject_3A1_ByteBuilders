<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@design.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.AddPost">
    <AnchorPane prefHeight="90.0" prefWidth="1210.0" styleClass="main-bg" stylesheets="@design.css">
        <children>
            <Label layoutX="54.0" layoutY="26.0" text=" Tunism Desktop App" textFill="WHITE">
                <font>
                    <Font size="24.0" />
                </font></Label>
        </children>
    </AnchorPane>

    <AnchorPane layoutX="307.0" layoutY="103.0" prefHeight="556.0" prefWidth="693.0" styleClass="AnchorPane" stylesheets="@design.css">
        <children>
            <Label layoutX="291.0" layoutY="14.0" text="What's New?" textFill="#f2f2f2" underline="true">
                <font>
                    <Font name="System Bold Italic" size="18.0" />
                </font>
            </Label>

            <Button fx:id="AddPostButton" layoutX="508.0" layoutY="423.0" mnemonicParsing="false" onAction="#AddNewPost" styleClass="btn" stylesheets="@design.css" text=" Add Post" />

            <Button fx:id="CancelAddingButton" layoutX="516.0" layoutY="466.0" mnemonicParsing="false" onAction="#Backtoposts" styleClass="btn" text=" Cancel" />
         <TextArea fx:id="ContentPost" layoutX="186.0" layoutY="73.0" prefHeight="90.0" prefWidth="322.0" />
         <ImageView fx:id="PhotoPost" fitHeight="224.0" fitWidth="243.0" layoutX="225.0" layoutY="289.0" pickOnBounds="true" preserveRatio="true" />
